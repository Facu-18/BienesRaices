extends ../layout/index.pug 

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes    
            span.font-normal Raices
        h2.text-center.text-2xl= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="email") Tu Email
                        input#email.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text.xs(href="/auth/login") ¿Ya tienes una cuenta? Incia Sesión
                        a.text-gray-500.text.xs(href="/auth/registro") ¿No tienes una cuenta? Crea una
                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar")