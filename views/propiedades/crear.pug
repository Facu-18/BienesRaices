extends ../layout/index.pug 

block styles 
     link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center 
            | Bienes
            span.font-normal Raices
        h2.text-center.text-2xl= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-8
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añade Información sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="titulo") Titulo del Anuncio
                        input#titulo.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(placeholder=" Titulo Propiedad, ej. Casa en la playa" type="text" name="titulo")

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="descripcion") Descripcion
                        textarea#descripcion.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(placeholder="Descripcion de la propiedad" name="descripcion")
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="categoria") Categoria 
                            select#categoria.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Seleccione -

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="precio") Precio
                            select#precio.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Seleccione -

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="habitaciones") habitaciones 
                            select#habitaciones.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Seleccione -
                                - var  n = 1;
                                    while n < 6
                                        option(value=n) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="estacionamiento") estacionamiento
                            select#estacionamiento.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value="") - Seleccione -
                                - var  n = 1;
                                    while n < 5
                                        option(value=n) #{n++}
                        
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.px-2.font-bold(for="wc") baños 
                            select#wc.w-full.py-2.border.border-gray-300.px-3.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Seleccione -
                                - var  n = 1;
                                    while n < 5
                                        option(value=n) #{n++}
                    
                    
                    div.border-gray-200.border-t.py-5.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Ubicacón
                    p.text-gray-600 Ubica la propiedad en el mapa
                    #mapa.h-96  


                    div 
                        p.calle

                    input(type="hidden" name="calle" id="calle")
                    input(type="hidden" name="lat" id="lat")
                    input(type="hidden" name="lng" id="lng")


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")